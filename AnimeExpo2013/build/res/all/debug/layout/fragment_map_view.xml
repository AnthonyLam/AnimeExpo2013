<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.gms.maps.MapView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:id="@+id/map"
            android:layout_alignParentTop="true"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MapHall"
            android:id="@+id/show_hall"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MapOne"
            android:id="@+id/show_level_one"
            android:layout_below="@+id/show_hall"
            android:layout_alignParentRight="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MapTwo"
            android:id="@+id/show_level_two"
            android:layout_below="@+id/show_level_one"
            android:layout_alignParentRight="true"/>

</RelativeLayout>